generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String
  password String
  posts    Post[]
}

model Post {
  id                   String               @id @default(cuid())
  title                String
  description          String
  type                 Type                 @default(research)
  img_url              String?
  img_path             String?
  img_url_expired_time DateTime?
  category             String?
  client               String?
  hki_paten            String?
  website_link         String?
  what_we_did_desc     String?
  published            Boolean              @default(false)
  userId               String?
  User                 User?                @relation(fields: [userId], references: [id])
  Post_dokumentation   Post_documentation[]
}

model Post_documentation {
  id                   String   @id @default(cuid())
  img_url              String?
  img_path             String?
  img_url_expired_time DateTime?
  postId               String
  post                 Post     @relation(fields: [postId], references: [id])
}

model Member {
  id                   String    @id @default(cuid())
  email                String    @unique
  name                 String
  img_url              String?
  img_path             String?
  img_url_expired_time DateTime?
  show                 Boolean   @default(false)
  start_date           DateTime?
  end_date             DateTime?
  position             String
  part                 Part      @default(Member)
}

enum Part {
  Member
  Intern
}

enum Type {
  research
  innovation
  community_service
}
